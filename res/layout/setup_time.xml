<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background3"
     >
   <include layout="@layout/main_title" android:focusable="true"/>	
 
		 <RelativeLayout
				    android:id="@+id/layoutHour"
				    android:background="@drawable/selector_layout_background"
			        android:layout_width="wrap_content"
			        android:layout_height="60dip"			        
			        android:paddingRight="10dip"
			        android:paddingLeft="10dip"
			        android:paddingBottom="6dip"
			        android:paddingTop="6dip"			      
			        >
				           

				            <TextView
				                android:id="@+id/textView1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_alignParentLeft="true"
				                android:layout_centerVertical="true"
				                android:gravity="center"
				                android:text="DEVICE"
				                android:textAppearance="?android:attr/textAppearanceLarge"
				                android:textColor="@drawable/selector_text_color" />
 					<ToggleButton
	                     android:id="@+id/timeHourBtn"
	                     android:textOn=" " 
        				 android:textOff=" " 
        				 android:background="@drawable/rf_switch_blue"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"	                     
	                     android:layout_alignParentRight="true"
	                     android:layout_centerVertical="true"
	                     
	                     android:gravity="center"
	                     />
				    </RelativeLayout>
				
               
	           <View
				android:layout_width="fill_parent"
				android:layout_height="2px"
				android:background="@drawable/line" >
				</View>
             
			   <RelativeLayout
			       android:id="@+id/layoutAuto"
			        android:background="@drawable/selector_layout_background"
				    android:layout_width="wrap_content"				   
				    android:layout_height="60dip"
				    android:paddingRight="10dip"
			        android:paddingLeft="10dip"
			        android:paddingBottom="6dip"
			        android:paddingTop="6dip"			      
			        >
   

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"              
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="CAMERA"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@drawable/selector_text_color" />
        				 <ToggleButton
	                     android:id="@+id/timeAutoBtn"
	                     android:textOn=" " 
        				 android:textOff=" " 
        				 android:background="@drawable/rf_switch_blue"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"	                     
	                     android:layout_alignParentRight="true"
	                     android:layout_centerVertical="true"
	                     
	                     android:gravity="center"
	                     />
             </RelativeLayout>
		           <View
					android:layout_width="fill_parent"
					android:layout_height="2px"
					android:background="@drawable/line" >
					</View>
             
				<RelativeLayout
				    android:id="@+id/layoutZone"
				     android:background="@drawable/selector_layout_background"
			        android:layout_width="wrap_content"			       
			        android:layout_height="60dip"
			        android:paddingRight="10dip"
			        android:paddingLeft="10dip"
			        android:paddingBottom="6dip"
			        android:paddingTop="6dip" >

	                 <TextView
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                      android:layout_alignParentLeft="true"
	                     android:layout_centerHorizontal="true"
	                     android:layout_centerVertical="true"
	                     android:gravity="center"
	                     android:text="Time Zone"
	                     android:textAppearance="?android:attr/textAppearanceLarge"
	                     android:textColor="@drawable/selector_text_color" />

	                 	<Spinner
	                 	    android:id="@+id/spinnerZone"
	                 	    android:layout_width="80dp"
	                 	    android:background="@color/transparent"
	                 	      
	                 	    android:layout_height="wrap_content"
	                 	    android:layout_alignParentRight="true"
	                 	    android:layout_centerVertical="true" />
	                 	            
            	</RelativeLayout>
 		      	<View
					android:layout_width="fill_parent"
					android:layout_height="2px"
					android:background="@drawable/line" >
					</View>
 
   
</LinearLayout>